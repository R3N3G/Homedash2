<assembly>
    <id>assembly</id>
    <!-- Generates a zip package containing the needed files -->
    <formats>
        <format>dir</format>
        <format>zip</format>
    </formats>

    <!-- Adds dependencies to zip package under lib directory -->
    <dependencySets>
        <dependencySet>
            <!-- Project artifact is not copied under library directory since it is
                added to the root directory of the zip package. -->
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <unpack>false</unpack>
            <excludes>
                <exclude>com.ftpix.homedash.plugins</exclude>
            </excludes>
        </dependencySet>

        <dependencySet>
            <!-- Project artifact is not copied under library directory since it is
                added to the root directory of the zip package. -->
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>plugins</outputDirectory>
            <unpack>false</unpack>
            <includes>
                <include>com.ftpix.homedash.plugins</include>
            </includes>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <!-- Adds startup scripts to the root directory of zip package. The startup
            scripts are located to src/main/scripts directory as stated by Maven conventions. -->
        <fileSet>
            <directory>../updater/target</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*with-dependencies.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.scriptSourceDirectory}</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>*.sh</include>
                <include>*.bat</include>
            </includes>
        </fileSet>
        <!-- adds jar package to the root directory of zip package -->
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <!-- adds cfg to the root directory of zip package -->
        <fileSet>
            <directory>${project.build.directory}/classes</directory>
            <outputDirectory>cfg</outputDirectory>
            <includes>
                <include>**/*.properties.default</include>
                <include>**/*.xml</include>
            </includes>

        </fileSet>
    </fileSets>
</assembly>